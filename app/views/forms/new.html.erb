<head>
  <!--javascript new_preview.jsの読み込み-->
<%= javascript_include_tag 'new_preview'%>
</head>
<div class="cover-new">
  <div class="container ">
    <div class="row">
      <div class="col d-flex justify-content-center">
        <h1 class="fw-bold my-3">新規投稿</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xl-6  ">
        <%= form_with model: @post, url: '/forms', local: true do |f| %>
          <div class="form-group">
            <label class="form-label fs-3 my-3">タイトル(15文字まで)</label>
            <%= f.text_field :title, class: "form-control form-control-lg" %>
          </div>
          <div class="form-group">
            <label class="form-label fs-3 my-3">内容(195文字まで)</label>
            <%= f.text_area :text, rows: 10, class: "form-control" %>
          </div>
          </div>
          <div class="col-xl-6 ">
            <div class="form-group fs-3">
              <label class="form-label my-3">画像</label><br>
              <%= f.label :image_id %>
              <%= f.file_field :image_id,id:"imageInput" %>
              <div class="preview" id="imagePreview">
                <img  alt="" src="">
              </div>
            </div>
          </div>
          <div class="my-3 d-flex justify-content-end">
            <%= f.submit '投稿する', class: "btn btn-primary btn-outline-light btn-lg" %>
          </div>
        <% end %>
        </div>
  </div>
</div>
