<div class="cover-edit">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">投稿編集</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @post, url:"/forms/#{@post.id}", local:true do |f| %>
      <div class="form-group">
        <label class="form-label">タイトル</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">内容</label>
        <%=f.text_area :text, rows: 10, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">画像</label><br>
        <%= f.file_field :image_id %>
        <% if @post.image_id? %>  <!-- アップロード画像がある場合に実行する -->
          <p>
          <%= image_tag @post.image_id.url %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
          </p>
        <%end%>
      </div>
      <%= f.submit '保存する', class: "btn btn-success" %><br>
      <%= link_to '投稿詳細ページへ', "/forms/#{@post.id}", class: "btn btn-dark mt-3" %>
      <%= link_to '削除する', form_path(@post.id),data: {turbo: true, turbo_method: :delete } , "data-confirm"=>"本当に消しますか？" %><br>
      <% end %>
    </div>
  </div>
</div>